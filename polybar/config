[colors]
col0 = ${xrdb:color0:#222}
col1 = ${xrdb:color1:#222}
col2 = ${xrdb:color2:#222}
col3 = ${xrdb:color3:#222}
col4 = ${xrdb:color4:#222}
col5 = ${xrdb:color5:#222}
col6 = ${xrdb:color6:#222}
col7 = ${xrdb:color7:#222}


[bar/mybar]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25

radius = 2.0
fixed-center = true

background = ${colors.col0}
foreground = ${colors.col7}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 0

font-0 = Overpass Mono:pixelsize=11;1

modules-left = i3
modules-center = date
modules-right = pulseaudio filesystem cpu memory wlan battery

wm-restack = i3

cursor-click = pointer
cursor-scroll = ns-resize


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =/: %percentage_used%%
label-unmounted =ATTN: SHIT IS ALL FUCKED UP FAM AAAAAAAA
label-unmounted-foreground = ${colors.col7}
label-mounted-underline = ${colors.col6}
label-unmounted-underline = ${colors.col5}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.col0}

; focused = Active workspace on focused monitor
label-focused =$%index%
;label-focused-background = ${colors.col1}
label-focused-underline= ${colors.col5}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
;label-unfocused-background = ${colors.col5}
label-unfocused-underline = ${colors.col6}

; visible = Active workspace on unfocused monitor
;label-visible = %index%
;label-visible-background = ${colors.col6}
;label-visible-underline = ${self.label-focused-underline}
;label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent =!%index%
label-urgent-background = ${colors.col0}
label-urgent-padding = 2
label-urgent-underline = ${colors.col7}

; Separator in between workspaces
; label-separator = |


[module/cpu]
type = internal/cpu
interval = 2
;format-prefix = " "
format-prefix-foreground = ${colors.col7}
format-underline = ${colors.col6}
label =CPU: %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.col7}
format-underline = ${colors.col6}
label =RAM: %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 2.0

format-connected =  <label-connected>
format-connected-underline = ${colors.col5}
label-connected =%essid%

format-disconnected = WiFi D/C
format-disconnected-underline = ${colors.col6}
label-disconnected-foreground = ${colors.col7}


[module/date]
type = internal/date
interval = 5

date =
date-alt ="%d-%m-%Y    "

time =%H:%M
time-alt =%H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.col7}
format-underline = ${colors.col6}

label =%date%%time%


[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume =VOL %percentage%%
label-volume-foreground = ${colors.col7}
label-volume-underline = ${colors.col6}

label-muted = 🔇 muted
label-muted-foreground = ${colors.col7}
label-muted-underline = ${colors.col5}


[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 97

format-charging =<label-charging>
format-charging-underline = ${colors.col5}

format-discharging =<label-discharging>
format-discharging-underline = ${colors.col6}

;format-full-prefix = " "
format-full =FULL
format-full-prefix-foreground = ${colors.col7
format-full-underline = ${colors.col5}


[global/wm]
margin-top = 2
margin-bottom = 2

