[module/memory]
type = internal/memory
interval = 2
format-underline =
label = Mem: %percentage_used%%





[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = #ffffff
label-connected = %essid%

format-disconnected = <label-disconnected>
label-disconnected = No WiFi
format-disconnected-underline = #000000



[module/date]
type = internal/date
interval = 3

date =
date-alt = "day of our lord %d/%m/%y"

time = %I:%M %p
time-alt = %I:%M %p

format-underline = 
label = %time% %date%


[module/pulseaudio]
